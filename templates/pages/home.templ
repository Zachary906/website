templ ServiceCard(emoji, title, description string, features []string) {
	<div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition-all duration-300 border border-gray-100">
		<div class="text-5xl mb-4">{ emoji }</div>
		<h3 class="text-2xl font-bold text-brand-dark mb-4">{ title }</h3>
		<p class="text-gray-600 mb-6 leading-relaxed">{ description }</p>
		<ul class="space-y-2">
			for _, feature := range features {
				<li class="flex items-center gap-2 text-gray-700">
					<svg class="w-5 h-5 text-brand-green flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
					</svg>
					{ feature }
				</li>
			}
		</ul>
	</div>
}

