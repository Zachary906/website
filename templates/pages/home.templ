templ ContactCard(emoji, title, info, link string) {
	<div class="bg-gray-50 p-6 rounded-xl text-center hover:shadow-lg transition-shadow">
		<div class="text-4xl mb-4">{ emoji }</div>
		<h3 class="font-semibold text-brand-dark mb-2">{ title }</h3>
		if link != "" {
			<a href={ templ.SafeURL(link) } target={ targetForLink(link) } rel={ relForLink(link) } class="text-brand-green hover:text-brand-green-dark transition-colors break-words">
				{ info }
			</a>
		} else {
			<p class="text-gray-600">{ info }</p>
		}
	</div>
}

func targetForLink(link string) string {
	if len(link) > 4 && link[:4] == "http" {
		return "_blank"
	}
	return ""
}

func relForLink(link string) string {
	if len(link) > 4 && link[:4] == "http" {
		return "noopener noreferrer"
	}
	return ""
}
