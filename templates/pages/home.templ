templ Home() {
	@layouts.Base(meta.New("Home", "Quality childcare services in Cornell, WI. Infant care through preschool program, open 5:30am-6:00pm Monday-Friday. Play, Learn and Grow... Together!")) {
		@HeroSection()
		@AboutSection()
		@ServicesSection()
		@TestimonialsSection()
		@ContactSection()
	}
}

